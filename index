    <Script>
    window.onload = function () {
        function draw() {
            var cvs = document.getElementById("cvs");
            var ctx = cvs.getContext("2d");
            ctx.arc(150,150,100,Math.PI*0.5,Math.PI*1.5)
            ctx.fillStyle = "#fff";
            ctx.fill();
            ctx.beginPath();
            ctx.arc(150,150,100,Math.PI*1.5,Math.PI*0.5)
            ctx.fillStyle = "#000";
            ctx.fill();
            ctx.beginPath();
            ctx.arc(150,200,50,Math.PI*0.5,Math.PI*1.5);
            ctx.fillStyle = "#000";
            ctx.fill();
            ctx.beginPath();
            ctx.arc(150,100,50,Math.PI*1.5,Math.PI*0.5);
            ctx.fillStyle = "#fff";
            ctx.fill();
            ctx.beginPath();
            ctx.arc(150,100,15,0,Math.PI*2);
            ctx.fillStyle = "#000";
            ctx.fill();
            ctx.beginPath();
            ctx.arc(150,200,15,0,Math.PI*2);
            ctx.fillStyle = "#fff";
            ctx.fill();
        }
        draw();
    }
    $(document).ready(function () {
        //驗證規則
        var rule = /^\d{3}$/;
        var r1 = false;
        var r2 = false;
        var r3 = false;
        //no1驗證
        $("#no1").blur(function() {
            if(rule.test($("#no1").val())){
                $(".sp1").text("v")
                $(".sp1").css({
                    "border":"border",
                    "color":"green"
                })
                r1 = true;
            } else{
                $(".sp1").text("x")
                $(".sp1").css({
                    "border":"border",
                    "color":"red"
                })
                r1 = false;
            }
        })
        //no2驗證
        $("#no2").blur(function() {
            if(rule.test($("#no2").val())){
                $(".sp2").text("v")
                $(".sp2").css({
                    "border":"border",
                    "color":"green"
                })
                r2 = true;
            } else{
                $(".sp2").text("x")
                $(".sp2").css({
                    "border":"border",
                    "color":"red"
                })
                r2 = false;
            }
        })
        //no3驗證
        $("#no3").blur(function() {
            if(rule.test($("#no3").val())){
                $(".sp3").text("v")
                $(".sp3").css({
                    "border":"border",
                    "color":"green"
                })
                r3 = true;
            } else{
                $(".sp3").text("x")
                $(".sp3").css({
                    "border":"border",
                    "color":"red"
                })
                r3 = false;
            }
        })
        //按鈕開放
        $("input").blur(function() {
            if(r1&&r2&&r3){
                $("#a").removeClass("disabled")
            } else {
                $("#a").addClass("disabled")
            }
        });
        //按鈕設定
        $("#a").click(function() {
            var n1 = Number($("input[name = 'n1']").val())% 8;
            var n2 = Number($("input[name = 'n2']").val())% 8;
            var n3 = Number($("input[name = 'n3']").val())% 6;
            var s2 ="";
            switch (n3) {
                case 1:
                    s2 = "一";
                    break;
                case 2:
                    s2 = "二";
                    break;
                case 3:
                    s2 = "三";
                    break;
                case 4:
                    s2 = "四";
                    break;
                case 5:
                    s2 = "五";
                    break;
                default:
                    s2 = "六";
                    break;
            }
            $("#change").text("變爻 " + s2);
            url="64/"+n1+"-"+n2+".html";
            fetch(url).then(function(response){
                return response.text()
            }).then(function(result) {
                $("#cont").html(result);
            })
        });
    });     
    </Script>
